<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/categoryBackgroundColor"
    android:padding="20dp"
    tools:context="com.purnendu.PocketNews.Category">



    <ImageButton
        android:id="@+id/gn"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/category_button_background"
        android:padding="40dp"
        android:scaleType="fitCenter"
        android:src="@drawable/generalnews"
        app:layout_constraintEnd_toStartOf="@+id/hn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageButton
        android:id="@+id/hn"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/gn"
        android:layout_marginTop="20dp"
        android:background="@drawable/category_button_background"
        android:padding="40dp"
        android:scaleType="fitCenter"
        android:src="@drawable/healthcare"
        app:layout_constraintEnd_toStartOf="@+id/sn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/gn"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageButton
        android:id="@+id/sn"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/hn"
        android:layout_marginTop="20dp"
        android:background="@drawable/category_button_background"
        android:padding="40dp"
        android:scaleType="fitCenter"
        android:src="@drawable/molecule"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/hn"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="General News"
        android:textSize="30sp"
        android:textColor="@color/textColor"
        app:layout_constraintEnd_toEndOf="@+id/gn"
        app:layout_constraintStart_toStartOf="@+id/gn"
        app:layout_constraintTop_toBottomOf="@+id/gn" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="Health"
        android:textSize="30sp"
        android:textColor="@color/textColor"
        app:layout_constraintEnd_toEndOf="@+id/hn"
        app:layout_constraintStart_toStartOf="@+id/hn"
        app:layout_constraintTop_toBottomOf="@+id/hn" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:text="Science"
        android:textSize="30sp"
        android:textColor="@color/textColor"
        app:layout_constraintEnd_toEndOf="@+id/sn"
        app:layout_constraintStart_toStartOf="@+id/sn"
        app:layout_constraintTop_toBottomOf="@+id/sn" />

    <ImageButton
        android:id="@+id/en"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/category_button_background"
        android:padding="40dp"
        android:scaleType="fitCenter"
        android:src="@drawable/dance"
        app:layout_constraintEnd_toStartOf="@+id/bn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        />

    <ImageButton
        android:id="@+id/bn"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/category_button_background"
        android:padding="40dp"
        android:scaleType="fitCenter"
        android:src="@drawable/money"
        app:layout_constraintEnd_toStartOf="@+id/spn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/en"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        />

    <ImageButton
        android:id="@+id/spn"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/category_button_background"
        android:padding="40dp"
        android:scaleType="fitCenter"
        android:src="@drawable/sports"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/bn"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Entertainment"
        android:textSize="30sp"
        android:textColor="@color/textColor"
        app:layout_constraintEnd_toEndOf="@+id/en"
        app:layout_constraintStart_toStartOf="@+id/en"
        app:layout_constraintTop_toBottomOf="@+id/en" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:text="Business"
        android:textSize="30sp"
        android:textColor="@color/textColor"
        app:layout_constraintEnd_toEndOf="@+id/bn"
        app:layout_constraintStart_toStartOf="@+id/bn"
        app:layout_constraintTop_toBottomOf="@+id/bn" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:text="Sports"
        android:textSize="30sp"
        android:textColor="@color/textColor"
        app:layout_constraintEnd_toEndOf="@+id/spn"
        app:layout_constraintStart_toStartOf="@+id/spn"
        app:layout_constraintTop_toBottomOf="@+id/spn" />

    <ImageButton
        android:id="@+id/tgn"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/category_button_background"
        android:padding="40dp"
        android:scaleType="fitCenter"
        android:src="@drawable/brain"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/spn"
        app:layout_constraintStart_toStartOf="@+id/en"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.0"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Technology"
        android:textSize="30sp"
        android:textColor="@color/textColor"
        app:layout_constraintEnd_toEndOf="@+id/tgn"
        app:layout_constraintStart_toStartOf="@+id/tgn"
        app:layout_constraintTop_toBottomOf="@+id/tgn" />






</androidx.constraintlayout.widget.ConstraintLayout>