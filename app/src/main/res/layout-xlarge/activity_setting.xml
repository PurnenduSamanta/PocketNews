<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="10dp"
    tools:context=".setting">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cyc"
        android:textColor="@color/colorAccent"
        android:text="Choose Your Country"
        android:textSize="40sp"/>
    <Spinner
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:backgroundTint="@color/colorAccent"
        android:paddingTop="20dp"
        android:layout_alignParentEnd="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cyc"
        android:id="@+id/cb"
        android:textColor="@color/colorAccent"
        android:paddingTop="10dp"
        android:text="Clear Bookmarks"
        android:textSize="40sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cb"
        android:id="@+id/cd"
        android:textColor="@color/colorAccent"
        android:paddingTop="10dp"
        android:text="Clear Sqlite Database"
        android:textSize="40sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cd"
        android:id="@+id/theme"
        android:textColor="@color/colorAccent"
        android:paddingTop="10dp"
        android:text="Enable Dark Theme"
        android:textSize="40sp"/>
   <com.google.android.material.switchmaterial.SwitchMaterial
       android:layout_width="80dp"
       android:layout_height="80dp"
       android:paddingTop="10dp"
       android:id="@+id/sb"
       android:backgroundTint="@color/colorAccent"
       android:layout_alignParentEnd="true"
       android:checked="false"
       android:layout_below="@+id/cd"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/theme"
        android:id="@+id/javascript"
        android:textColor="@color/colorAccent"
        android:paddingTop="10dp"
        android:text="Enable Javascript "
        android:textSize="40sp"/>
    <com.google.android.material.switchmaterial.SwitchMaterial
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:id="@+id/javascriptSwitch"
        android:backgroundTint="@color/colorAccent"
        android:layout_alignParentEnd="true"
        android:checked="false"
        android:layout_below="@+id/theme"/>
</RelativeLayout>